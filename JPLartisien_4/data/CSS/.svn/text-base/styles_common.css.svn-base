* {
	font-family: "Trebuchet MS", Verdana, Arial, Helvetica, sans-serif;
	text-decoration:none;
	margin:0px 0px 0px 0px;
	padding:0px 0px 0px 0px;
	font-size: 12px;
}

a {
	color:#4f5864;
	border:none;
	cursor:pointer;
}
img {
	border:none;
}

div.ajaxload {
	display:block;
	width:100%;
	height:174px;
	margin:0px auto;
	background:transparent url('../images/ajax-loader.gif') center center no-repeat;
}

body {
	background-color:#444;
	color:white;
}

h1 {
	margin:0px;
	text-align: center;
}

div#BIG {
	clear: both;
	width: 1024px;
	margin:0px auto;
	background-color:#222;
}
div#colg {
	float: left;
	color:#CCC;
	background-color:#242d37;
	width:300px;
	min-height:550px;
	height:auto !important;
	height:550px;
}
div#corpsppal {
	width:auto;
	margin:0px 0px 0px 306px;
	background-color:#242d37;
	color:white;
	min-height:550px;
	height:auto !important;
	height:550px;
}

/* TEXTES */

.rouge	{color:red;}
.orange	{color:orange;}
.vert	{color:green;}
.gris	{color:#333;}
.mini {
	font-size:0.7em;
	font-style:italic;
}

/* ********************************** */
/*     Bandeau de LOGIN / LOGOUT      */
/* ********************************** */
div#connect {
	width: 1024px;
	height: 24px;
	background-color: #222;
	color: white;
	margin:0px auto;
}
div#connect input[type="button"] {
	float: right;
	margin: 2px 12px;
	height: 20px;
	font-size: 14px;
	line-height: 20px;
	padding: 0px 8px;
}

/* ********************************** */
/*    Formulaire de LOGIN / LOGOUT    */
/* ********************************** */
div#login {
	overflow: hidden;
}
div#login >form >div >div {
	margin: 3px auto;
}
div#login >form >div >div >p {
	display: inline-block;
	/*float: left;*/
	width: 90px;
	text-align: right;
	color: #666;
	font-size: 13px;
	line-height: 18px;
}
div#login >form >div >div >input {
	width: 160px;
	height: 18px;
	font-size: 14px;
	line-height: 18px;
	display: inline-block;
	border: 0px solid #444;
	border-top:1px solid #444;
	border-left:1px solid #444;
	background-color: #777;
	color: #fff;
	-moz-border-radius: 2px;
	-webkit-border-radius: 2px;
	border-radius: 2px;
	padding: 0px 4px;
}
div#login >form >div >p#errn {
	position: absolute;
	background-color: #fff;
	display: none;
	text-align: center;
	padding-top: 14px;
	width: 270px;
	height: 336px;
	font-weight: bolder;
	font-size: 14px;
	color: #c00;
}
